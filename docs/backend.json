{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name"
        },
        "age": {
          "type": "number",
          "description": "The user's age"
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user"
        },
        "interests": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "image": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "imageUrl": {
              "type": "string",
              "format": "uri"
            },
            "imageHint": {
              "type": "string"
            }
          },
          "required": ["id", "imageUrl"]
        },
        "location": {
          "type": "string",
          "description": "The user's location"
        },
        "isOnline": {
          "type": "boolean"
        },
        "gallery": {
          "type": "array",
          "items": {
            "$ref": "#/entities/user/properties/image"
          }
        }
      },
      "required": ["name", "age", "bio", "image", "location", "isOnline"]
    },
    "message": {
      "title": "Message",
      "description": "A chat message between users",
      "type": "object",
      "properties": {
        "senderId": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "isRead": {
          "type": "boolean"
        }
      },
      "required": ["senderId", "text", "timestamp", "isRead"]
    },
    "conversation": {
      "title": "Conversation",
      "description": "A collection of messages between two users",
      "type": "object",
      "properties": {
        "userIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "messages": {
          "type": "array",
          "items": {
            "$ref": "#/entities/message"
          }
        }
      },
      "required": ["userIds", "messages"]
    },
    "post": {
      "title": "Post",
      "description": "A user-generated post with text and images.",
      "type": "object",
      "properties": {
        "authorId": {
          "type": "string",
          "description": "The ID of the user who created the post."
        },
        "title": {
          "type": "string",
          "description": "The title of the post."
        },
        "content": {
          "type": "string",
          "description": "The main body content of the post."
        },
        "category": {
          "type": "string",
          "description": "The category of the post (e.g., Travel, Photography)."
        },
        "images": {
          "type": "array",
          "items": {
            "$ref": "#/entities/user/properties/image"
          }
        },
        "likes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of user IDs who liked the post."
        },
        "comments": {
            "type": "array",
            "items": {
                "$ref": "#/entities/comment"
            }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["authorId", "title", "content", "createdAt"]
    },
    "comment": {
        "title": "Comment",
        "description": "A comment on a user-generated post.",
        "type": "object",
        "properties": {
            "authorId": {
                "type": "string",
                "description": "The ID of the user who wrote the comment."
            },
            "text": {
                "type": "string",
                "description": "The content of the comment."
            },
            "timestamp": {
                "type": "string",
                "format": "date-time"
            },
            "likes": {
                "type": "array",
                "items": { "type": "string" },
                "description": "A list of user IDs who liked the comment."
            },
            "replies": {
                "type": "array",
                "items": {
                    "$ref": "#/entities/comment"
                }
            }
        },
        "required": ["authorId", "text", "timestamp"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores individual user profiles."
    },
    "/conversations/{conversationId}": {
      "schema": {
        "$ref": "#/entities/conversation"
      },
      "description": "Stores chat conversations between users."
    },
    "/posts/{postId}": {
      "schema": {
        "$ref": "#/entities/post"
      },
      "description": "Stores user-generated posts."
    }
  }
}
